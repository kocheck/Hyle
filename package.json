{
  "name": "graphium",
  "productName": "Graphium",
  "description": "The digital stylus for world builders. Inscribe the world on an infinite canvas.",
  "private": true,
  "version": "0.5.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:web": "vite --mode web",
    "build": "tsc && vite build && electron-builder",
    "build:web": "tsc && vite build --mode web",
    "preview:web": "vite preview --outDir dist-web",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:a11y": "playwright test accessibility.spec.ts --config=playwright.config.ts",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:web": "playwright test --config=playwright.config.ts --project=Web-Chromium",
    "test:e2e:electron": "playwright test --config=playwright.config.ts --project=Electron-App",
    "test:e2e:functional": "playwright test tests/functional/ --config=playwright.config.ts",
    "test:e2e:ui": "playwright test --config=playwright.config.ts --ui",
    "test:e2e:debug": "playwright test --config=playwright.config.ts --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@remixicon/react": "^4.8.0",
    "electron-log": "^5.2.4",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.9",
    "fs-extra": "^11.3.2",
    "idb": "^8.0.3",
    "jszip": "^3.10.1",
    "konva": "^10.0.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-easy-crop": "^5.5.6",
    "react-konva": "^18.2.14",
    "use-image": "^1.1.4",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@ibm/plex": "^6.4.1",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.22",
    "axe-core": "^4.11.0",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.3.1",
    "wait-on": "^9.0.3"
  },
  "main": "dist-electron/main.js"
}
